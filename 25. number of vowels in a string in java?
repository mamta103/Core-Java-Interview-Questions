package io.javabrains;

//How to count number of vowels in a string in java?
public class VowelDemo {
	public static void main(String[] args) {
		String string = "Cognizant";
		int count= 0;
		for (int i = 0; i < string.length(); i++) {
			if (string.charAt(i) == 'a' || string.charAt(i) == 'i' || string.charAt(i) == 'o' || string.charAt(i) == 'u' || string.charAt(i) == 'e') {
            count++;
            System.out.println("Vowel letters: "+string.charAt(i));
			}
		}
		System.out.println("Count of Vowel: "+count);
	}
}
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
Vowel letters: o
Vowel letters: i
Vowel letters: a
Count of Vowel: 3
