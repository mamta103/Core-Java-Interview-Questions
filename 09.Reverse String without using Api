/*
Reverse of string without using API
*/
package io.javabrains;

import java.util.Scanner;

public class ReverseStringWithoutApi {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Enter String for reverse on  console: ");
		String str1 = scanner.nextLine();
		stringReversing(str1);
	}// end of main method

	private static void stringReversing(String str1) {
		String str2 = "";
		for (int i = str1.length() - 1; i >= 0; i--) {
			str2 += str1.charAt(i);
		} // end of for loop
		System.out.println("String After reverse:" + str2);
	}// end of stringReversing
}// end of class

:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
output:
Enter String for reverse on  console: 
String Demo
String After reverse:omeD gnirtS
